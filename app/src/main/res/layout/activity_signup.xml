<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/wetasphalt"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aladin"
        android:text="SignUp"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="50sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:padding="16dp"
        android:drawablePadding="16dp"
        android:hint="Name"
        android:textColorHint="#34495e"
        android:maxLines="1"
        android:inputType="textPersonName"
        android:background="@drawable/bkgrd_redlogin1"
        android:id="@+id/sname"
        android:layout_marginTop="32dp"
      />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Email"
            android:textColorHint="#34495e"
            android:maxLines="1"
            android:inputType="textEmailAddress"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/semail"
            android:layout_marginTop="16dp"
            />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Password"
            android:textColorHint="#34495e"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/spass"
            android:layout_marginTop="16dp"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:padding="16dp"
            android:drawablePadding="16dp"
            android:hint="Confirm Password"
            android:textColorHint="#34495e"
            android:maxLines="1"
            android:inputType="textPassword"
            android:background="@drawable/bkgrd_redlogin1"
            android:id="@+id/scpass"
            android:layout_marginTop="16dp"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:clickable="true"
            android:textColor="#34495e"
            android:padding="16dp"
            android:id="@+id/signup"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:textAllCaps="false"
            android:background="@drawable/bkgd_red_2"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#fff"
            android:id="@+id/tologin"
            android:text="Already a User? Click here to login"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            />


    </LinearLayout>

</ScrollView>


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:id="@+id/sprogressBar"
        />





</RelativeLayout>